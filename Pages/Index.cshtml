@page
@model IndexModel
@{    
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <div class="container">
        <button>Cool Button</button>
    </div>
</body>

<style>
     :root {
        --background-colour: #100720;
    }
    
    body {
        background: var(--background-colour);
    }
    
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 600px;
    }
    
    .container h2 {
        position: absolute;
        top: 5px;
    }
    
    button {
        position: absolute;
        width: 200px;
        height: 60px;
        border-radius: 1rem;
        border: none;
        cursor: pointer;
        color: #fff;
        font-size: 17px;
        transition: 0.1s;
        background: var(--background-colour);
    }
    
    button::after {
        content: "";
        width: 100%;
        height: 100%;
        background-image: radial-gradient(circle farthest-corner at 20%, rgba(255, 94, 247, 1) 17.8%, rgba(2, 245, 255, 1) 100.2%);
        filter: blur(15px);
        z-index: -1;
        position: absolute;
        left: 0;
        top: 0;
    }
    
    button:active {
        transform: scale(0.9) rotate(3deg);
        background-image: radial-gradient(circle farthest-corner at 20%, rgba(255, 94, 247, 1) 17.8%, rgba(2, 245, 255, 1) 100.2%);
        transition: 0.1s;
    }
</style>

</html>